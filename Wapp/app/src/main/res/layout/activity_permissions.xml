<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".PermissionsActivity">

    <Button
        android:id="@+id/btnPermission"
        android:layout_width="267dp"
        android:layout_height="58dp"
        android:text="@string/btnPemission"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

    <TextView
        android:id="@+id/txtTitlePemission"
        android:layout_width="335dp"
        android:layout_height="91dp"
        android:layout_marginTop="68dp"
        android:text="@string/txtTitlePemission"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPermission"
        android:layout_width="322dp"
        android:layout_height="352dp"
        android:text="@string/txtPemission"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/txtTitlePemission"
        app:layout_constraintEnd_toEndOf="@+id/txtTitlePemission"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/txtTitlePemission"
        app:layout_constraintTop_toTopOf="@+id/txtTitlePemission"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sad_face" />

</androidx.constraintlayout.widget.ConstraintLayout>